{
  "name": "apollo-server-webpack-hmr",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "nenjotsu"
  },
  "description": "Apollo GraphQL Server with TypeScript and Webpack HMR",
  "scripts": {
    "build": "webpack --config webpack.$NODE_ENV.js",
    "dev": "concurrently \"NODE_ENV=development npm run build\" \"npm run start:server:env\"",
    "start": "npm-run-all --serial build start:server",
    "start:server": "node ./dist/server",
    "start:server:env": "node --require dotenv/config dist/server"
  },
  "dependencies": {
    "apollo-datasource-mongodb": "^0.1.0",
    "apollo-datasource-rest": "^0.6.1",
    "apollo-server": "^2.5.0",
    "datasource-sql": "^0.2.0",
    "graphql": "^14.3.0",
    "knex": "^0.19.1",
    "mongoose": "^5.6.9",
    "mssql": "^5.1.0"
  },
  "devDependencies": {
    "@types/mongoose": "^5.5.12",
    "@types/node": "^12.0.1",
    "@types/webpack-env": "^1.13.9",
    "clean-webpack-plugin": "^2.0.2",
    "dotenv": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^6.0.0",
    "typescript": "^3.4.5",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "keywords": [
    "webpack",
    "graphql",
    "typescript",
    "apollo",
    "apollo-server"
  ]
}